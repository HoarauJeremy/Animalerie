{% extends 'base.html.twig' %}

{% block title %}Hello PetshopController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des animaleries</h1>

    <div>
        <ul>
            {% for petshop in petshops %}
                <li><a href="{{ path('app_petshop_showOne', {id: petshop.id}) }}">{{ petshop.name }}</a></li>
                {% else %}
                    Aucune animalerie disponible.
            {% endfor %}
        </ul>
    </div>

</div>
{% endblock %}
